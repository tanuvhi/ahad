@model IEnumerable<Ahad.Models.Unit>

@{
    ViewBag.Title = "UnitList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UnitList</h2>

<p>
    @Html.ActionLink("Create New", "UnitCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UnitId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UnitId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UnitId })
        </td>
    </tr>
}

</table>
